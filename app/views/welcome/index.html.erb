<h1>Задачи</h1>
<% titles = []
Project.all.each do |project| %>
	<h2><%= project.title %></h2>
	<% titles << project.title %>
	<ul>
		<% project.todos.each do |todo|%>
			<li><%= todo.text %></li>
		<% end %>
	</ul>
<% end %>

<h1>Новая задача</h1>

<%= form_for :project, url: projects_path do |f| %>
	<p>
		<%= f.label :text  %>
		<%= f.text_field :text %>
	</p>
	<p>
		<%= select(:project, :title, titles) %>
	</p>
	<p>
	<%= f.submit %>
	</p>
<% end %>
